<?xml version="1.0" encoding="utf-8"?>
<?include "Config.wxi"?>

<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">   
	<Product Id="$(var.ProductId)" Name="$(var.ProductName) $(var.SDKVersion) SDK" Language="$(var.ProductLanguage)" Version="$(var.ProductVersion)" Manufacturer="$(var.ProductManufacturer)" 
      UpgradeCode="$(var.UpgradeCode)">
        
      <Package InstallerVersion="200" Compressed="yes" InstallPrivileges="elevated" InstallScope="perMachine" Manufacturer="$(var.ProductManufacturer)" />        
		<Media Id="1" Cabinet="product.cab" EmbedCab="yes" />
        
        <DirectoryRef Id="TARGETDIR" />

        <!-- Defines the user interface that will be used by the installer. -->
        <UIRef Id="ProductUI" />

        <Feature Id="C1005E88_AFF7_4882_A505_CF59DAB41BAE" Title="$(var.ProductName)" Level="1" AllowAdvertise="no" Absent="disallow" Display="expand">
            <ComponentRef Id="WindowsInstallerBugWorkaround" />
            
            <!-- Defines the features that will be installed -->
            <FeatureGroupRef Id="DDC0B08B_3081_408C_8EFB_DBDBE408BE2D" />
        </Feature>
	</Product>
</Wix>